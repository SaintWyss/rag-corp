{
  "name": "@rag-corp/e2e",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "test": "playwright test -c playwright.config.cjs",
    "test:headed": "playwright test -c playwright.config.cjs --headed",
    "test:ui": "playwright test -c playwright.config.cjs --ui",
    "test:debug": "PWDEBUG=1 playwright test -c playwright.config.cjs",
    "codegen": "playwright codegen http://localhost:3000",
    "install:browsers": "playwright install --with-deps",
    "e2e:install:browsers": "playwright install chromium",
    "e2e:run": "bash scripts/run-e2e.sh",
    "e2e:report": "bash scripts/show-report.sh",
    "e2e:trace": "echo 'Usa: pnpm exec playwright show-trace <path>'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20"
  }
}
