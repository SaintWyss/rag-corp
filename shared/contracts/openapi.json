    "/healthz": {
      "get": {
        "summary": "Healthz",
        "description": "R: Enhanced health check that verifies system dependencies.\n\nArgs:\n    full: If True, also check Google API connectivity (slower)\n\nReturns:\n    ok: True if all checked systems operational\n    db: \"connected\" or \"disconnected\"\n    google: \"available\", \"unavailable\", or \"disabled\" (only with full=true)\n    request_id: Correlation ID for this request",
        "operationId": "healthz_healthz_get",
        "parameters": [
          {
            "name": "full",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false,
              "title": "Full"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
