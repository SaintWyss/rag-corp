  "components": {
    "schemas": {
      "AskRes": {
        "properties": {
          "answer": {
            "type": "string",
            "title": "Answer"
          },
          "sources": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Sources"
          }
        },
        "type": "object",
        "required": [
          "answer",
          "sources"
        ],
        "title": "AskRes"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "IngestBatchReq": {
        "properties": {
          "documents": {
            "items": {
              "$ref": "#/components/schemas/IngestTextReq"
            },
            "type": "array",
            "maxItems": 10,
            "minItems": 1,
            "title": "Documents",
            "description": "List of documents to ingest (1-10)"
          }
        },
        "type": "object",
        "required": [
          "documents"
        ],
        "title": "IngestBatchReq"
      },
      "IngestBatchRes": {
        "properties": {
          "documents": {
            "items": {
              "$ref": "#/components/schemas/IngestTextRes"
            },
            "type": "array",
            "title": "Documents"
          },
          "total_chunks": {
            "type": "integer",
            "title": "Total Chunks"
          }
        },
        "type": "object",
        "required": [
          "documents",
          "total_chunks"
        ],
        "title": "IngestBatchRes"
      },
      "IngestTextReq": {
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 200,
            "minLength": 1,
            "title": "Title",
            "description": "Document title (1-200 chars)"
          },
          "text": {
            "type": "string",
            "maxLength": 100000,
            "minLength": 1,
            "title": "Text",
            "description": "Full document text to be chunked (1-100,000 chars)"
          },
          "source": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 500
              },
              {
                "type": "null"
              }
            ],
            "title": "Source",
            "description": "Optional source URL or identifier (max 500 chars)"
          },
          "metadata": {
            "additionalProperties": true,
            "type": "object",
            "title": "Metadata",
            "description": "Additional custom metadata (JSONB)"
          }
        },
        "type": "object",
        "required": [
          "title",
          "text"
        ],
        "title": "IngestTextReq"
      },
      "IngestTextRes": {
        "properties": {
          "document_id": {
            "type": "string",
            "format": "uuid",
            "title": "Document Id"
          },
          "chunks": {
            "type": "integer",
            "title": "Chunks"
          }
        },
        "type": "object",
        "required": [
          "document_id",
          "chunks"
        ],
        "title": "IngestTextRes"
      },
      "Match": {
        "properties": {
          "chunk_id": {
            "type": "string",
            "format": "uuid",
            "title": "Chunk Id"
          },
          "document_id": {
            "type": "string",
            "format": "uuid",
            "title": "Document Id"
          },
          "content": {
            "type": "string",
            "title": "Content"
          },
          "score": {
            "type": "number",
            "title": "Score"
          }
        },
        "type": "object",
        "required": [
          "chunk_id",
          "document_id",
          "content",
          "score"
        ],
        "title": "Match"
      },
      "QueryReq": {
        "properties": {
          "query": {
            "type": "string",
            "maxLength": 2000,
            "minLength": 1,
            "title": "Query",
            "description": "User's natural language question (1-2,000 chars)"
          },
          "top_k": {
            "type": "integer",
            "maximum": 20.0,
            "minimum": 1.0,
            "title": "Top K",
            "description": "Number of similar chunks to retrieve (1-20)",
            "default": 5
          }
        },
        "type": "object",
        "required": [
          "query"
        ],
        "title": "QueryReq"
      },
      "QueryRes": {
        "properties": {
          "matches": {
            "items": {
              "$ref": "#/components/schemas/Match"
            },
            "type": "array",
            "title": "Matches"
          }
        },
        "type": "object",
        "required": [
          "matches"
        ],
        "title": "QueryRes"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API key with appropriate scope (ingest, ask, metrics)"
      }
    }
  },
  "security": [
