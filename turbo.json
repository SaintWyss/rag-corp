{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "compose.yaml",
    "turbo.json",
    "pnpm-lock.yaml",
    "shared/contracts/openapi.json",
    "shared/contracts/orval.config.*",
    "apps/**/Dockerfile",
    "infra/**"
  ],
  "globalEnv": [
    "APP_ENV",
    "RAG_BACKEND_URL",
    "FAKE_LLM",
    "FAKE_EMBEDDINGS"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "cache": false,
      "outputs": []
    },
    "contracts:gen": {
      "dependsOn": ["^contracts:gen"],
      "outputs": ["dist/**", "src/generated/**", "generated/**"]
    }
  }
}
