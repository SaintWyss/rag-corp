# --- prod-local example (NO commitear secretos) ---
APP_ENV=production
LOG_LEVEL=info

# Compose vars (evita warnings y hace que Postgres inicie bien)
POSTGRES_USER=ragcorp
POSTGRES_PASSWORD=change_me
POSTGRES_DB=ragcorp
GRAFANA_PASSWORD=change_me

# DB: en compose, el host es el service name "postgres" (NO localhost)
DATABASE_URL=postgresql://ragcorp:change_me@postgres:5432/ragcorp

# Hardening / JWT (prod exige secret)
JWT_SECRET=replace-with-32+char-secret
JWT_COOKIE_SECURE=true
METRICS_REQUIRE_AUTH=true

# Elegi UNO: API_KEYS_CONFIG o RBAC_CONFIG
API_KEYS_CONFIG={"example-key":["metrics","ask","ingest"]}
RBAC_CONFIG=

# Para prod-local sin depender de Google
FAKE_LLM=true
FAKE_EMBEDDINGS=true
GOOGLE_API_KEY=dummy
