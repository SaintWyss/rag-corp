# =============================================================================
# TARJETA CRC - apps/backend/.env.example (Plantilla backend)
# =============================================================================
# Responsabilidades:
# - Documentar variables de entorno requeridas por el backend.
# - Proveer placeholders seguros sin secretos reales.
# - Servir como base para un .env local NO versionado.
#
# Colaboradores:
# - apps/backend/app/crosscutting/config.py (Settings)
# - compose.yaml (runtime local)
# - docs/runbook/security-rotation.md (rotacion de secretos)
#
# Invariantes:
# - NO incluir valores reales de secretos.
# - Mantener claves alineadas con Settings.
# =============================================================================

APP_ENV=local

# DB (Local Connection)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag

# AI Configuration
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE
FAKE_LLM=0
FAKE_EMBEDDINGS=0

# Redis (Local Connection)
REDIS_URL=redis://localhost:6379
EMBEDDING_CACHE_BACKEND=redis

# Storage (MinIO Local Connection)
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=rag-documents
S3_ACCESS_KEY=CHANGE_ME_S3_ACCESS_KEY
S3_SECRET_KEY=CHANGE_ME_S3_SECRET_KEY
S3_REGION=us-east-1

# Auth
JWT_SECRET=CHANGE_ME_GENERATE_A_SECRET
JWT_COOKIE_SECURE=false

# Google Drive Connector (OAuth)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/v1/workspaces/{workspace_id}/connectors/google-drive/auth/callback
CONNECTOR_ENCRYPTION_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# Advanced Config (Defaults)
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_STATEMENT_TIMEOUT_MS=30000
ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=false
CHUNK_SIZE=900
CHUNK_OVERLAP=120
MAX_TOP_K=20
MAX_INGEST_CHARS=100000
MAX_QUERY_CHARS=2000
API_KEYS_CONFIG=
METRICS_REQUIRE_AUTH=false
RBAC_CONFIG=
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
MAX_BODY_BYTES=10485760
MAX_UPLOAD_BYTES=26214400
PROMPT_VERSION=v2
MAX_CONTEXT_CHARS=12000
